{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@materials/*": ["materials/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@modules/*": ["modules/*"],
      "@scenes/*": ["scenes/*"],
      "@utils/*": ["utils/*"]
    },
    "noImplicitAny": false,
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
